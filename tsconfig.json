{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~/global.css": ["global.css"],
      "~/components/*": ["src/components/*"],
      "~/features/*": ["src/features/*"],
      "~/lib/*": ["src/lib/*"],
      "~/assets/*": ["assets/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
